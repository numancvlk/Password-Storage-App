{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "lib": ["es2016", "esnext"], 
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules" 
  ]
}